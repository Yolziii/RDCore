{
    "compilerOptions": {
        "module": "umd", //"commonjs",
        "target": "es6",
        "sourceMap": true,
        "noImplicitAny": false,

        "strictNullChecks": false, /* Не дает присваивать null, undefined кому попало:
            let s = "foo";
            s = null; // error
            let sn: string | null = "bar";
            sn = null; // ol
        */

        "removeComments": false,
        "moduleResolution": "node"
    },
    "exclude": [
        "src",
        "node_modules",
        "dist"
    ]
}